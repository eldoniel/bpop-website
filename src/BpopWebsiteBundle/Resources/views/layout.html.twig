<!DOCTYPE HTML>
<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/bpopwebsite/css/style.css') }}">
        <script src="{{ asset('js/bootstrap.js') }}"></script>
        <title>{% block title %}Bienvenue sur le site de B!pop, formation de Brütal Pop iséroise!{% endblock %}</title>
    </head>
    <body>
        <div class="banniere col-md-12">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <a href="{{ path('bpop_website_news') }}">
                    <img src="{{ asset('bundles/bpopwebsite/images/bpoplogo-fond-transp2.png') }}" alt="Bienvenue sur le site de B!pop !" class="header-picture" />
                </a>
            </div>
            <div class="col-md-3"></div>
        </div>
        <div class="col-md-12">
            <div class="col-md-1"></div>
            <div class="menu_site col-md-2">
                <div class="panel panel-default">
                    <div class="list-group">
                        <a class="list-group-item" href="{{ path('bpop_website_news') }}">News</a>
                        <a class="list-group-item" href="{{ path('bpop_website_music') }}">Musique</a>
                        <a class="list-group-item" href="#">Galerie</a>
                    </div>
                </div>
            </div>
            <div class="body col-md-6">
                {% block body %}
                {% endblock %}
            </div>
            <div class="upcoming col-md-2">
                {{ render(controller("BpopWebsiteBundle:UpcomingDates:upcoming")) }}
            </div>
            <div class="col-md-1"></div>
        </div>
    </body>
</html>